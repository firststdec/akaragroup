      .c-box-recipe-content__inner
        .c-local-fix-nav
          .heading Cheddar Chive Biscuits
          .list-step
            .list-step__item.is-active
              span Step 1
            .list-step__item
              span Step 2
            .list-step__item
              span Step 3
            .list-step__item
              span Step 4
            .list-step__item
              span Step 5
        
        .c-box-ingredient
          .c-box-ingredient__inner
            .heading-egg
              .icon-egg
                .i-list-white
              .text Information per serving 1 biscuit
            table.c-table-ingrediant-01
              tr
                td Name
