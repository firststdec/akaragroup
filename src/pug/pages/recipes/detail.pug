block content
  .p-recipe-detail
    .c-mv-recipe
      .c-mv-recipe__overlay
      .c-mv-recipe__image
        img.image(src="/assets/img/recipes/detail/img_recipes_01.png")

    .c-box-recipe-heading
      .c-box-recipe-heading__inner
        .c-recipe-heading-01 Cheddar Chive Biscuits
        .c-recipes-tag-list
          .c-recipes-tag-list__item
            .icon
              img(src="/assets/img/recipes/detail/ico_chief.svg", alt="")
            .text Level Easy
          .c-recipes-tag-list__item
            .icon
              img(src="/assets/img/recipes/detail/ico_dish.svg", alt="")
            .text Small Dish
          .c-recipes-tag-list__item
            .icon
              img(src="/assets/img/recipes/detail/ico_meal.svg", alt="")
            .text Breakfast
          .c-recipes-tag-list__item
            .icon
              img(src="/assets/img/recipes/detail/ico_time.svg", alt="")
            .text 45 mins
      .c-box-recipe-heading__inner
        .c-box-share-download
          a.c-button-middle.c-button--orange.-btn-recipes(href='#')
            .c-button__text.-button
              i.fa.fas.fa-share-alt
              i.fa.fas.fa-share-alt.fa--bottom
              | SHARE RECIPES
          a.c-button-middle.c-button--orange.-btn-recipes(href='#')
