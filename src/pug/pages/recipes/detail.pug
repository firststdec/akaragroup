          .c-box-ingredient__inner.-bg-cream
            .heading-egg
              .icon-egg
                .i-clipboard
              .text Ingredients for 10 servings
            table.c-table-ingrediant-02
              tr
                td All-purpose flour
                td 3 cups  |   390g
              tr
                td Baking powder
                td 1 tbsp  |   12g
              tr
